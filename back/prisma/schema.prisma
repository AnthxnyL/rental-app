generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  phone           String?   @unique
  firstname       String?
  lastname        String?
  nbApartment     Int       @default(0)
  role            String    @default("USER")
  password        String?   @default("")

}


model Apartment {
  id              Int       @id @default(autoincrement())
  rent            Int
  charges         Int
  adress          String
  city            String
  postalCode      String
}
